<div class="page-header">
  <%= link_to recipes_path, class: 'btn btn-default' do %>
    All Recipes
  <% end %>
  <%= link_to edit_recipe_path(@recipe), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show recipe</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @recipe.title %></dd>

  <dt>Description:</dt>
  <dd><%= @recipe.description %></dd>

</dl>
